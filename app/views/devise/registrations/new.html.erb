<h2>Регистрация нового аккаунта</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="field">
    <%= f.label :name, 'Имя' %>
    <%= f.text_field :name %>
  </div>

  <div class="field">
    <%= f.label :email, 'Электронная почта' %>
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

  <div class="edit-account-field">
    <%= f.label :role_id, 'Роль' %>
    <%= f.collection_select :role_id, Role.all, :id, :name %>
  </div>

  <div class="edit-account-field">
    <%= f.label :department_id, 'Отдел' %>
    <%= f.collection_select :department_id, Department.all, :id, :name %>
  </div>

  <div class="field">
    <%= f.label :password, 'Пароль' %>
    <% if @minimum_password_length %>
    <em>(Минимум <%= @minimum_password_length %> символов)</em>
    <% end %>
    <%= f.password_field :password, autocomplete: "new-password" %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation, 'Подтверждение пароля' %>
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>

  <div class="actions">
    <%= f.submit "Зарегистрировать" %>
  </div>
<% end %>

<% if account_signed_in? == false %>
  <%= render "devise/shared/links" %>
<% end %>