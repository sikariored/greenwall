<h3>Информация о роли <br> <%= @role.name %></h3>

<table class="table table-dark table-bordered table-striped table-hover table-condensed">
  <tr>
    <th>Аккаунты с данной ролью</th>
    <th>Действия</th>
  </tr>
  <% @role.accounts.each do |account| %>
    <tr>
      <td>
        <%= link_to account.name, account_path(account) %>
      </td>
      <td>
        <%= link_to 'Инфо', account_path(account) %> | <%= link_to 'Редактировать', edit_account_path(account) %>
      </td>
    </tr>
  <% end %>
</table>
<%= link_to "Список ролей", roles_path %>
