<%= form_with model: @role do |f| %>
  <div class="edit-role-field">
    <%= f.label :name, 'Название роли' %>
    <%= f.text_field :name, require: true%>
  </div>

  <div class="edit-account-field">
    <%= f.label :department_access, 'Доступ к отделу' %>
    <%= f.collection_check_boxes :department_access, Department.all, :id, :name %>
  </div>

  <div class="actions">
    <%= f.submit 'Создать роль' %>
  </div>
<% end %>