<div class="note_form_wrapper">
  <%= form_with model: @note do |f| %>

    <%= f.label :title, 'Заголовок' %>
    <%= f.text_field :title %>

    <%= f.label :body, 'Текст' %>
    <%= f.text_area :body, require: true, rows: 10 %>

    <%= f.hidden_field :account_id, value: current_account.id %>

    <%= f.submit 'Создать заметку', class: "btn btn-primary" %>
  <% end %>
</div>