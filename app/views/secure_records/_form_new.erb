<%= form_with model: @secure_record do |f| %>

  <%= f.hidden_field :account_id, value: current_account.id %>

  <%= f.label :login %>
  <%= f.text_field :login, require: true %>

  <%= f.label :password %>
  <%= f.text_field :password, require: true %>

  <%= f.label :resource %>
  <%= f.text_field :resource %>

  <%= f.submit 'Create SecureRecord'%>
<% end %>