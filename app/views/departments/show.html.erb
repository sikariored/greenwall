<h3>Информация об отделе <br> <%= @department.name %></h3>

<table class="table table-dark table-bordered table-striped table-condensed table-hover">
  <thead>
    <tr>
      <th>Имя</th>
      <th>Email</th>
    </tr>
  </thead>
  <tbody>
    <% @department_accounts.each do |account| %>
      <tr>
        <td><%= link_to account.name, account_path(account) %></td>
        <td><%= account.email %></td>
      </tr>
    <% end %>
</table>


